@model MyAspWeb.Models.Note

<div class="row">
    @if (Model == null)
    {
        <form method="post" asp-action="Detail">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" placeholder="如需加密输入密码" class="form-control"></input>
                </div>
                <p>
                    <button type="submit" class="btn text-center">查看</button>
                </p>
                <div class="form-group">
                    <label asp-for="Attachment"></label>
                    <input asp-for="Attachment" type="file" class="form-control"></input>
                </div>
            </div>

        </form>
    }
    else
    {
        <h3>@Model.Title</h3>
        <h5>类型：@Model.Type.Name</h5>
        <div class="content">@Model.Content</div>
        if (!string.IsNullOrEmpty(Model.Attachment))
        {
            <a href="@Model.Attachment">下载</a>
        }
    }
</div>
