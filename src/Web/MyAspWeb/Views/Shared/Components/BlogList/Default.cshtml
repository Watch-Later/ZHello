@model List<Blog>

<div>
    <div>
        <h3>博客排行</h3>
    </div>
    <div class="list-group">
        @if(Model!=null && Model.Count >0)
        {
            foreach (var item in Model)
            {
                <a asp-controller="Blog" asp-action="Index" asp-route-id="@item.BlogId" class="list-group-item" href="@item.Url">
                    @item.BlogName
                </a>
            }
        }
        else
        {
            <div>
                Here is Nothing. Goto <a asp-controller="Blog" asp-action="Register">Register</a>
            </div>
        }
    </div>
</div>